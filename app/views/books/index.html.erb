<h1>Books</h1>
<table>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book), {class:"links"} %></td>
      <td><%= link_to "Edit", edit_book_path(book), {class:"links"}  %></td>
      <td><%= link_to "Destroy", book_path(book), { method: :delete, class:"links" }  %></td>
    </tr>
    <% end %>
</table>
<h2>New book</h2>
<%= form_with model: @book, url: books_path, local: true do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
         <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <div><%= f.submit %></div>
<% end %>